<% title "Rank your ideas by criteria" %>

<ul id="criterias">  
  <% @criterias.each do |criteria| %>  
    <%= content_tag_for :li, criteria do %>  
      <%= link_to criteria.title, criteria %>  
    <% end %>  
  <% end %>  
</ul>  
<%= sortable_element 'criterias', :url => sort_criteria_url(@criteria) %> 


<ul id="ideas">  
  <% @criteria.ideas.each do |idea| %>  
    <%= content_tag_for :li, idea do %>  
      <%= link_to idea.title, idea_path(idea) %>  
    <% end %>  
  <% end %>  
</ul>  
<%= sortable_element 'ideas', :url => sort_idea_url(@criteria) %> 

